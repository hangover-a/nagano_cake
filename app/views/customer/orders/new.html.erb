<h2>注文情報入力</h2>
<%= form_with model: @order, url: confirm_customers_orders_path, method: :post, local: true do |order| %>
  <h3>支払方法</h3>
  <%= order.radio_button :payment_method, :credit_card, checked: true %>
  <%= order.label :payment_method, "クレジットカード", {value: :credit_card, style: "display: inline-block;"} %>
  <%= order.radio_button :payment_method, :bank_transfer %>
  <%= order.label :payment_method, "銀行振込", {value: :bank_transfer, style: "display: inline-block;"} %>
  <h3>お届け先</h3>
  <%= order.radio_button :addresses, "residence", checked: true %>
  <%= order.label :addresses, "ご自身の住所", {value: :residence, style: "display: inline-block;"} %>
  <br>
  <%= current_customer.postcode %><%= current_customer.address %>
  <br>
  <%= current_customer.last_name %><%= current_customer.first_name %>
  <br>
  <%= order.radio_button :addresses, "delivery_address" %>
  <%= order.label :addresses, "登録済住所から選択", {value: :delivery_address, style: "display: inline-block;"} %>
  <br>
  <%= order.select :addresses, {'男性': 1, '女性': 2}, { include_blank: '選択してください'}, { class: 'form-control' , required: true } %>
  <br>
  <%= order.radio_button :addresses, "new_address" %>
  <%= order.label :addresses, "新しいお届け先", {value: :new_address, style: "display: inline-block;"} %>
  <br>
  <%= order.label :"郵便番号(ハイフンなし)" %>
  <%= order.text_field :postcode %><br>
  <%= order.label :"住所" %>
  <%= order.text_field :address %><br>
  <%= order.label :"宛名" %>
  <%= order.text_field :addresses %><br>
  <div class="actions">
    <%= order.submit "確認画面へ進む", class: 'btn btn-primary' %>
  </div>
<% end %>