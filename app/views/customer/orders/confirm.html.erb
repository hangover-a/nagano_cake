<h2>注文情報確認</h2>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |cart| %>
      <tr>
        <td>
          <%= attachment_image_tag cart.item, :image, size: "100x100" %>
          <%= cart.item.name %>
        </td>
        <td>
          <%= cart.item.price_tax_included.to_s(:delimited, delimiter: ',') %>
        </td>
        <td>
          <%= cart.quantity %>
        </td>
        <td>
          <%= cart.sub_price.to_s(:delimited, delimiter: ',') %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<table class="table table-bordered">
  <tr>
    <th>送料</th>
    <td>
      <%= @order.delivery_fee %>
    </td>
  </tr>
  <tr>
    <th>商品合計</th>
    <td>
      <%= total_price(@cart_items).to_s(:delimited, delimiter: ',') %>
    </td>
  </tr>
  <tr>
    <th>請求金額</th>
    <td>
      <%= pricing_money(@cart_items, @order).to_s(:delimited, delimiter: ',') %>
    </td>
  </tr>
</table>
<h2>支払方法</h2>
<%= @order.payment_method_i18n %>
<h2>お届け先</h2>
<span>
  <%= @order.postcode %><%= @order.address %>
</span>
<%= @order.addressee %>
<%= form_with model: @order, url: customers_orders_path, method: :post, local: true do |f| %>
  <%= f.hidden_field :postcode, :value => @order.postcode %>
  <%= f.hidden_field :address, :value => @order.address %>
  <%= f.hidden_field :addressee, :value => @order.addressee %>
  <%= f.hidden_field :payment_method, :value => @order.payment_method %>
  <%= f.hidden_field :total_cost, :value => pricing_money(@cart_items, @order) %>
  <%= f.submit "購入を確定する", class: "btn btn-warning" %>
<% end %>