<h2>注文履歴詳細</h2>
<div class="row">
  <div class="col-xs-6">
    <h3>注文情報</h3>
    <table class="table table-bordered">
        <tr>
          <th class="active">注文日</th><td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <th class="active">配送先</th>
          <td>
            <%= @order.postcode %><br>
            <%= @order.address %><br>
            <%= @order.addressee %>
          </td>
        </tr>
        <tr>
          <th class="active">支払方法</th><td><%= @order.payment_method_i18n %></td>
        </tr>
        <tr>
          <th class="active">ステータス</th><td><%= @order.order_status %></td>
        </tr>
    </table>
  </div>
  <div class="col-xs-3">
    <h3>請求情報</h3>
    <table class="table table-bordered">
        <tr>
          <th class="active">商品合計</th><td><%= @order.total_cost.to_s(:delimited, delimiter: ',') %>円</td>
        </tr>
        <tr>
          <th class="active">配送料</th><td><%= @order.delivery_fee.to_s(:delimited, delimiter: ',') %>円</td>
        </tr>
        <tr>
          <th class="active"><strong>ご請求額</strong></th><td><%= @order.pricing.to_s(:delimited, delimiter: ',') %>円</td>
        </tr>
    </table>
  </div>
  <div class="col-xs-3"></div>
</div>
<h3>注文内容</h3>
<div class="row">
  <div class="col-xs-8">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th class="active">商品</th>
          <th class="active">単価(税込)</th>
          <th class="active">個数</th>
          <th class="active">小計</th>
        </tr>
      </thead>
      <% @order_details.each do |order_detail| %>
        <tbody>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td><%= order_detail.item.price_tax_included.to_s(:delimited, delimiter: ',') %>円</td>
            <td><%= order_detail.quantity %></td>
            <td><%= sub_total(order_detail).to_s(:delimited, delimiter: ',') %>円</td>
          </tr>
        </tbody>
      <% end %>
    </table>
  </div>
</div>