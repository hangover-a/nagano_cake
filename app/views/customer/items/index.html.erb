<div class="container">
  <div class="row">
    <h1>商品一覧</h1>
      <% @items.each do |item| %>
        <%= link_to item_path(item.id) do %>
          <%= attachment_image_tag item, :image, size: "170x170", fallback: "no_image.jpg"%><br>
        <% end %>
        <p><%= item.item_name %></p>
        <p><%= item.price_without_tax %></p>
      <% end %>
  </div>
</div>