<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <table class="table table-hover">
        <thead>
          <tr><h1>ジャンル検索</h1></tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-xs-9">
      <h1>商品一覧(全<%= @quantity %>件)</h1>
      <% @items.each do |item| %>
        <div class="box" style="float:left; margin-right:20px;">
          <%= link_to item_path(item.id) do %>
            <%= attachment_image_tag item, :image, size: "180x150", class: "img_prev" %><br>
          <% end %>
          <p><%=  item.name %></p>
          <p>￥<%= item.price_without_tax %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>