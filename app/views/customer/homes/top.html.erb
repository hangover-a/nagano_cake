
<div class="row row-top">
  <div class="col-xs-3">

    <%= render 'customer/search/search_form' %>

    <table class="table table-bordered genre-table">
      <thead>
        <tr>
          <th>ジャンル検索</th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
        <tr>
          <td>
            <%= link_to genre.name, search_path('search[value]': genre.id, 'search[how]': "match") %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    　<p>関係者の方は<%= link_to 'こちら', new_administrator_session_path, class:"order-link" %></p>
    <% if customer_signed_in? %>
    　<p class="order-link-border">
        オーダーケーキご依頼は
        <%= link_to "こちら", new_order_cake_path ,class:"order-link", 'data-turbolinks': false %>
      </p>
      <p class="order-link-border">
        オーダーケーキ発注確定は
        <%= link_to "こちら", order_cakes_path, class:"order-link" %>
      </p>
    <% end %>
  </div>
  <div class="col-xs-9">
    <div id="slideimage">
      <div class="dummy"></div>
      <p class="top-text">
        NaganoCakeオンライン通販サイトへようこそ<br>
        豊富なラインナップからお好きな商品を国内どこへでも配送いたします。<br>
        また、オリジナルケーキの作成依頼も賜っていますので、ご気軽にご相談ください。
      </p>
    </div>
    <h3 style="margin-top:10px;">オススメ商品</h3>
    <p><%= link_to 'もっと見る>', items_path %></p>
    <% @items.first(4).each do |item| %>
        <div class="box" style="float:left; margin-right:20px;">
          <%= link_to item_path(item.id) do %>
            <%= attachment_image_tag item, :image, size: "180x150", class: "img_hover" %><br>
          <% end %>
          <p class="fas fa-chevron-circle-right item-name"><%= item.name %></p><br>
          <p class="fas fa-chevron-circle-right"><%= item.price_without_tax.to_s(:delimited, delimiter: ',') %>円</p>
        </div>
      <% end %>
  </div>
</div>


