<div class="row">
  <div class="col-xs-12">
    <h2>マイカート</h2>
    <%= link_to "カートを空にする", customers_cart_items_path, method: :delete, data: { confirm: 'カートを空にしますか?' }, class: "btn-sm btn-danger" %>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% current_customer.cart_items.each do |cart_item| %>
        <tr>
          <td>
            <%= attachment_image_tag cart_item.item, :image, size:"30x30" %>
            <%= cart_item.item.name %>
          </td>
          <td>
            <%= (cart_item.item.price_without_tax*1.1).floor.to_s(:delimited, delimiter: ',') %>
          </td>
          <td>
            <%= form_with model: cart_item, url: customers_cart_item_path(cart_item), method: :patch, local: true do |f| %>
              <%= f.number_field :quantity, min:1 %>
              <%= f.submit "変更", class: "btn btn-primary" %>
            <% end %>
          </td>
          <td>
            <%= ((cart_item.item.price_without_tax*1.1).floor*cart_item.quantity).to_s(:delimited, delimiter: ',') %>
          </td>
          <td>
            <%= link_to "削除する", customers_cart_item_path(cart_item), method: :delete, data: { confirm: 'カートから削除しますか?' }, class: "btn-sm btn-danger" %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <table class="table table-bordered" style="width: 20%;">
      <tr>
        <th>合計金額</th><td><%= total_price(@cart_items) %></td>
      </tr>
    </table>
    <div class="col-xs-12">
      <div class="text-left">
        <%= link_to "買い物を続ける", items_path, class:"btn btn-primary btn-sm" %>
      </div>
    </div>
    <div class="text-center">
      <%= link_to "情報入力に進む", new_customers_order_path, data: { confirm: '買い物は以上ですか?' }, class: "btn-sm btn-success" %>
    </div>
  </div>
</div>
