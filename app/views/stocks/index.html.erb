<div class="row">
  <div class="col-xs-1"></div>
  <div class="col-xs-7">
    <h3>ストック一覧</h3>
    <table class="table">
      <tr>
        <th></th>
        <th>商品名</th>
        <th>単価(税込)</th>
      </tr>
      <% @stock_items.each do |stock_item| %>
        <tr>
          <td>
            <%= link_to item_path(stock_item.id) do %>
              <%= attachment_image_tag stock_item, :image, size:"60x60" %>
            <% end %>
          </td>
          <td>
            <%= link_to item_path(stock_item.id) do %>
              <%= stock_item.name %>
            <% end %>
          </td>
          <td><%= stock_item.price_tax_included.to_s(:delimited, delimiter: ',') %>円</td>
        </tr>
      <% end %>
    </table>
  </div>
  <div class="col-xs-4"></div>
</div>