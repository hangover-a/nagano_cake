<header class="navbar navbar-fixed-top">
  <div class="container header">
    <nav class="nav navbar-nav col-xs-8">
      <%= link_to root_path do %>
        <h4 class="inc-name">Nagano Cake <i class="fas fa-candy-cane" style="color: rgba(255,192,203);"></i></h4>
      <% end %>
    </nav>
    <nav>
      <ul class="nav navbar-nav col-xs-4" style="padding-top: 5px;">
        <% if customer_signed_in? %>
          <li class="nav-btn" style="margin-left:0px;"><%= link_to 'マイページ', customers_path(current_customer) %></li>
          <li class="nav-btn"><%= link_to '商品一覧', items_path %></li>
          <li class="nav-btn"><%= link_to 'カート', customers_cart_items_path %></li>
          <li class="nav-btn"><%= link_to 'ログアウト', destroy_customer_session_path, method: :delete %></li>
