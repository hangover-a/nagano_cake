          <li class="nav-btn"><%= link_to '商品一覧', administrator_items_path %></li>
          <li class="nav-btn"><%= link_to '会員一覧', administrator_customers_path %></li>
          <li class="nav-btn"><%= link_to '注文履歴一覧', administrator_orders_path %></li>
          <li class="nav-btn"><%= link_to 'ジャンル一覧', administrator_genres_path %></li>
          <li class="nav-btn"><%= link_to 'ログアウト', destroy_administrator_session_path, method: :delete %></li>
        <% else %>
          <li class="nav-btn" style="margin-left:25px;"><%= link_to 'About', about_path %></li>
          <li class="nav-btn"><%= link_to '商品一覧', items_path %></li>
          <li class="nav-btn"><%= link_to '新規登録', new_customer_registration_path %></li>
          <li class="nav-btn"><%= link_to 'ログイン', new_customer_session_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>