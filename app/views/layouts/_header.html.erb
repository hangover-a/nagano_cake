<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <nav class="nav navbar-nav navbar-left">
      <%= image_tag "logo.jpg", alt: "nagano_cake_logo", class: "logo", width: "100px" %>
    </nav>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if customer_signed_in? %>
          <p>ようこそ<%= current_customer.last_name %>さん</p>
          <li><%= link_to 'マイページ', customers_path(current_customer), class: "btn btn-default" %></li>
          <li><%= link_to '商品一覧', items_path, class: "btn btn-default" %></li>
          <li><%= link_to 'カート', customers_cart_items_path, class: "btn btn-default" %></li>
          <li><%= link_to 'ログアウト', destroy_customer_session_path, method: :delete, class: "btn btn-default" %></li>
        <% elsif administrator_signed_in? %>
          <li><%= link_to '商品一覧', administrator_items_path, class: "btn btn-default" %></li>
          <li><%= link_to '会員一覧', administrator_customers_path, class: "btn btn-default" %></li>
          <li><%= link_to '注文履歴一覧', administrator_orders_path, class: "btn btn-default" %></li>
          <li><%= link_to 'ジャンル一覧', administrator_genres_path, class: "btn btn-default" %></li>
          <li><%= link_to 'ログアウト', destroy_administrator_session_path, method: :delete, class: "btn btn-default" %></li>
        <% else %>
          <li><%= link_to 'About', about_path, class: "btn btn-default" %></li>
          <li><%= link_to '商品一覧', items_path, class: "btn btn-default" %></li>
          <li><%= link_to '新規登録', new_customer_registration_path, class: "btn btn-default" %></li>
          <li><%= link_to 'ログイン', new_customer_session_path, class: "btn btn-default" %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>