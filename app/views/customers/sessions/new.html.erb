<div class="row">
  <div class="col-xs-2"></div>
  <div class="col-xs-6 sessions">
    <h3>会員の方はこちらからログイン</h3>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <table class="table">
        <tr>
          <th><%= f.label :email, "メールアドレス" %></th>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
        </tr>
        <tr>
          <th><%= f.label :password, "パスワード" %></th>
          <td><%= f.password_field :password, autocomplete: "current-password" %></td>
        </tr>
      </table>
      <%= link_to "=> パスワードを忘れた方はこちら", edit_customer_password_path %>

      <div class="actions">
        <%= f.submit "ログイン", class: 'btn btn-primary' %>
      </div>
    <% end %>

    <h3>登録がお済みでない方</h3>
    <%= link_to new_customer_registration_path do %>
      <button>こちら</button>
    <% end %>
    から新規登録を行ってください。
  </div>
  <div class="col-xs-2"></div>
</div>