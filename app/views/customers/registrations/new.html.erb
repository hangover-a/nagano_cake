<h3>新規会員登録</h3>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <%= render "customers/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name, "名前" %>
    (姓)<%= f.text_field :last_name, autocomplete: "山田" %>
    (名)<%= f.text_field :first_name, autocomplete: "花子" %>
  </div>

  <div class="field">
    <%= f.label :name, "フリガナ" %>
    (セイ)<%= f.text_field :last_name_kana, autocomplete: "ヤマダ" %>
    (メイ)<%= f.text_field :first_name_kana, autocomplete: "ハナコ" %>
  </div>

  <div class="field">
    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :postcode, "郵便番号(ハイフンなし)" %>
    <%= f.text_field :postcode %>
  </div>

  <div class="field">
    <%= f.label :address, "住所" %>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :phone_number, "電話番号(ハイフンなし)" %>
    <%= f.text_field :phone_number %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード" %>
    <% if @minimum_password_length %>
    (<%= @minimum_password_length %>文字以上)
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード(確認用)" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<h3>既に登録済みの方</h3>
<%= link_to new_customer_session_path do %>こちら<% end %>からログインしてください。
