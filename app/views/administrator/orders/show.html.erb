<div class="container">
  <div class="row">
    <div class=col-xs-12>
      <h2>注文履歴詳細</h2>
      <table>
        <tr class="order">
          <th>購入者</th>
          <td><%= @order.customer.last_name %> <%= @order.customer.first_name %></td>
        </tr>
        <tr class="order">
          <th>配送先</th>
          <td>〒<%= @order.postcode %><%= @order.address %></td>
        </tr>
        <tr class="order">
          <th>支払い方法</th>
          <td><%= @order.payment_method %></td>
        </tr>
        <th class="order">注文ステータス</th>
        <td class="order">
          <%= form_with model:@order,url:administrator_order_path, local: true do |f| %>
          <%= f.select:order_status,["入金待ち","入金確認","発送準備中","発送済"] %>
          <%= f.submit "更新" %>
          <% end %>
        </td>
      </table>
    </div>
  </div>
  <div class="orders">
    <div class="col-xs-9">
      <table class="table table-hover">
        <thead>
          <tr class="info">
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th>制作ステータス</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @order_details.each do |order_details| %>
          <tr>
            <td><%= order_details.item.name %></td>
            <td>￥<%= (order_details.item.price_without_tax*1.1) .floor %></td>
            <td><%= order_details.quantity %></td>
            <td><%= (order_details.quantity)*((order_details.item.price_without_tax*1.1) .floor) %></td>
            <%= form_with model:order_details,url:administrator_order_order_details_path(@order_details),method: :patch, local: true do |f| %>
              <td><%= f.select :making_status, ["着手不可","製作待ち","製作中","製作完了"] %></td>
              <td><%= f.submit '更新' %></td>
            <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="detail">
      <div>
        <table style="line-hei">
          <% @order_details.each do |order_detail| %>
          <tr>
            <th>商品合計</th>
            <td><%= (order_detail.quantity)*((order_detail.item.price_without_tax*1.1) .floor) %>円</td>
          </tr>
          <tr>
            <th>送料</th>
            <td> <%= @order.delivery_fee.to_s(:delimited) %>円</td>
          </tr>
          <tr>
            <th>請求金額</th>
            <td><%= (order_detail.quantity)*((order_detail.item.price_without_tax*1.1) .floor) + @order.delivery_fee %>円</td>
          </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>
