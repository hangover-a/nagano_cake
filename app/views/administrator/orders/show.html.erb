<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h2>注文履歴詳細</h2>
      <table>
        <tr>
          <th>購入者</th>
          <td><%= customer.last_name %> <%= customer.first_name %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td>〒<%= @order.postcode %><%= @order.address %></td>
        </tr>
        <tr>
          <th>支払い方法</th>
          <td><%= @order.payment_method %></td>
        </tr>
        <th>注文ステータス</th>
        <td>
        <%= form_with @order, url: administrators_order_path, local :true do |f| %>
          <%= f.select :order_status,["入金待ち","入金確認","発送準備中","発送済"] %>
          <%= f.submit "更新" %>
        <% end %>
        </td>
      </table>
    </div>
  </div>
  <div class="col-xs-9">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
          <th>制作ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @order_details.each do |order_detail| %>
        <tr>
          <td><%= order_detail.item.name %></td>
          <td>￥<%= (order_detail.item.price_without_tax*1.1) .floor %></td>
          <td><%= order_detail.quantity %></td>
          <td><%= (order_detail.quantity)*((order_detail.item.price_without_tax*1.1) .floor) %></td>
          <%= form_with model: order_detail, url: administrator_order_order_details_path(order_detail), method: :patch, local :true do |f| %>
          <td>
            <%= f.select :making_status, ["着手不可","製作待ち","製作中","製作完了"] %>
            <%= f.submit '更新' %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="col-xs-3">
    <h3>商品合計</h3>
    <h3>送料</h3>
    <h3>請求金額</h3>
  </div>
</div>
