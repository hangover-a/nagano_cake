<table class="table table-hover table-bordered table-condensed">
  <thead>
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td class="info col-xs-1">
          <%= customer.id %>
        </td>
        <td>
          <%= link_to admin_customer_path(customer) do %>
            <%= name(customer) %>
          <% end %>
        </td>
        <td>
          <%= customer.email %>
        </td>
        <td>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
