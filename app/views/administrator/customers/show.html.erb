<h2><%= @customer.last_name%><%= @customer.first_name%>さんの会員詳細</h2>
<div class="container">
  <div class="row">

      <table>
        <tr>
          <td>会員ID</td>
          <td><%= @customer.id %></td>
          <td><% if @customer.is_deleted == true %>
                <p>退会済み</p>
              <% else @customer.is_deleted == false %>
                <p>有効会員</p>
              <% end %>
          </td>
        </tr>
        <tr>
          <td>氏名</td>
          <td><%= @customer.last_name %><%= @customer.first_name %></td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= @customer.postcode %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= @customer.phone_number %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
      </table>
      <%= link_to '編集する', edit_administrator_customer_path(@customer.id), class: "btn btn-primary" %>
      <%= link_to '注文履歴一覧を見る', administrator_orders_path(@customer.id), class: "btn btn-primary" %>
    </div>

</div>