<div class="row">
  <div class="col-xs-12">
    <h1>商品一覧</h1>
    <%= link_to "商品作成", new_administrator_item_path, class: "btn btn-primary btn-sm" %>
    <%= link_to "オーダー一覧", administrator_order_cakes_path, class: "btn btn-success btn-sm order_cake-btn" %>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
        <tr>
          <td>
            <%= item.id %>
          </td>
          <td>
            <%= link_to item.name, administrator_item_path(item) %>
          </td>
          <td>
            <%= item.price_without_tax.to_s(:delimited, delimiter: ',') %>
          </td>
          <td>
            <%= item.genre.name %>
          </td>
          <td>
            <% if item.is_active == true %>
              <p>販売中</p>
            <% else %>
              <p>販売停止中</p>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>