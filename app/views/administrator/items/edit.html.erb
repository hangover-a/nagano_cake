<%= form_with model: @item, url: administrator_item_path(@item), local:true do |f| %>
  <div class="row">
    <h3>商品編集</h3>
    <div class="col-xs-4">
      <%= f.attachment_field :image, class: 'img_field', style: 'display:none;' %>
      <%= attachment_image_tag @item, :image, :fill, 300, 300, onClick: "$('.img_field').click()", class: 'center-block img-thumbnail img-responsive img_prev' %>
    </div>
    <div class="col-xs-6">
      <table class="table">
        <tr>
          <th><%= f.label :"商品名" %></th>
          <td><%= f.text_field :name, class: "nameform" %></td>
        </tr>
        <tr>
          <th><%= f.label :"商品説明" %></th>
          <td><%= f.text_area :discription, class: "discription-form", size: "30x4" %></td>
        </tr>
        <tr>
          <th><%= f.label :"ジャンル" %></th>
          <td><%= f.collection_select(:genre_id, @genres, :id, :name) %></td>
        </tr>
        <tr>
          <th><%= f.label :"税抜価格" %></th>
          <td><%= f.text_field :price_without_tax, class: "price-form" %></td>
        </tr>
        <tr>
          <th><%= f.label :"販売ステータス" %></th>
          <td><%= f.select :is_active, [["販売中", true], ["売り切れ", false]], {include_blank: true} %></td>
        </tr>
      </table>
    </div>
    <div class="col-xs-2"></div>
  </div>
  <div class="row">
    <div class="col-xs-10"></div>
    <div class="col-xs-2">
      <%= f.submit "変更を保存", class: "btn btn-primary col-xs-8" %>
    </div>
  </div>
<% end %>
