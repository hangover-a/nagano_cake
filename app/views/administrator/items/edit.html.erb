<div class="row">
  <h2>商品編集</h2>
  <%= form_with model: @item, url: administrator_item_path(@item), local:true do |f| %>
    <div class="col-xs-4">

      <%= f.attachment_field :image, class: 'img_field', style: 'display:none;' %>
      <%= attachment_image_tag @item, :image, :fill, 300, 300, onClick: "$('.img_field').click()", class: 'center-block img-thumbnail img-responsive img_prev' %>
    </div>
    <div class="col-xs-6">
      <span>
        <%= f.label :"商品名" %>
        <%= f.text_field :name, class: "name-form" %>
      </span><br>
      <span>
        <%= f.label :"商品説明" %>
        <%= f.text_area :discription, class: "discription-form", size: "30x4" %>
      </span><br>
      <span>
        <%= f.label :"ジャンル" %>
        <%= f.collection_select(:genre_id, @genres, :id, :name ) %>
      </span><br>
      <span>
        <%= f.label :"税抜価格" %>
        <%= f.text_field :price_without_tax, class: "price-form" %>
      </span><br>
      <span>
        <%= f.label :"販売ステータス" %>
        <%= f.select :is_active, [["販売中", true], ["売り切れ", false]], {include_blank: true} %>
      </span>
    </div>
    <div class="col-xs-2">
      <%= f.submit "変更を保存", class: "btn btn-primary col-xs-8" %>
    </div>
  <% end %>
</div>