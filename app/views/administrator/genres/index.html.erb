<div class="row">
  <div class="col-xs-6 col-xs-offset-3">
    <h2>ジャンルの一覧と追加</h2>
    <%= form_with model: @genre_new, url: administrator_genres_path, local: true do |f| %>
      <%= f.label :"ジャンル" %>
      <%= f.text_field :name, class: "genre-name" %>
      <%= f.radio_button :is_active, true %> 有効 <%= f.radio_button :is_active, false %> 無効
      <%= f.submit "追加", class: "btn btn-primary" %>
    <% end %>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>ジャンル</th>
          <th>状態</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
        <tr>
          <td>
            <%= genre.name %>
          </td>
          <td>
            <% if genre.is_active == true %>
              <p>有効</p>
            <% else %>
              <p>無効</p>
            <% end %>
          </td>
          <td>
            <%= link_to "編集する", edit_administrator_genre_path(genre), class: "btn btn-primary" %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>