<div class="row">
  <h2>ジャンル編集</h2>
  <%= form_with model: @genre, url: administrator_genre_path(@genre), local: true do |f| %>
    <%= f.label :"ジャンル" %>
    <%= f.text_field :name, class: "genre-name" %>
    <%= f.radio_button :is_active, true %>
    <%= f.label :is_active, "有効", value: :true %>
    <%= f.radio_button :is_active, false %>
    <%= f.label :is_active, "無効", value: :false %>
    <%= f.submit "変更を保存", class: "btn btn-primary" %>
  <% end %>
</div>