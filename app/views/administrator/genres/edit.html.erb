<div class="row">
  <h2>ジャンル編集</h2>
  <%= form_with model: @genre, url: administrator_genre_path(@genre), local: true do |f| %>
    <%= f.label :"ジャンル" %>
    <%= f.text_field :name, class: "genre-name" %>
    <%= f.radio_button :is_active, true %> 有効 <%= f.radio_button :is_active, false %> 無効
    <%= f.submit "変更を保存", class: "btn btn-primary" %>
  <% end %>
</div>